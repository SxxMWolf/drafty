{
  "name": "AI Rewrite (MVP)",
  "description": "Rewrite selected text without leaving the page.",
  "version": "0.1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://cachinnatory-teodora-parasitic.ngrok-free.dev/*"
  ]
}